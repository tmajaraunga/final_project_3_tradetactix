<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Login Fragment (New Start Destination) -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.finalproject3.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_matchListFragment"
            app:destination="@id/matchListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Renamed to 'matchListFragment' for clarity -->
    <fragment
        android:id="@+id/matchListFragment"
        android:name="com.example.finalproject3.MatchListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <!-- Renamed action for clarity -->
        <action
            android:id="@+id/action_matchListFragment_to_matchDetailFragment"
            app:destination="@id/matchDetailFragment" />
    </fragment>

    <!-- Renamed to 'matchDetailFragment' for clarity -->
    <fragment
        android:id="@+id/matchDetailFragment"
        android:name="com.example.finalproject3.MatchDetailFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <argument
            android:name="matchId"
            app:argType="string" />
    </fragment>
</navigation>
